# AETHER-GEN Backend Configuration
# Copy this to .env file and customize as needed

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Device Configuration (cuda or cpu)
DEVICE=cuda

# Point-E Configuration
DEFAULT_QUALITY=normal  # fast, normal, or high
ENABLE_CACHE=true
MODEL_CACHE_DIR=./point_e_model_cache

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/aether.log

# API Configuration
API_TITLE=Aether-Gen API
API_VERSION=1.5.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Export Configuration
EXPORT_DIR=./exports
MAX_EXPORT_SIZE=500  # MB
